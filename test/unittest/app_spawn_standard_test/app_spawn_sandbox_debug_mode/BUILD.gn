import("//base/startup/appspawn/appspawn.gni")
import("//base/startup/appspawn/modules/sandbox/sandbox.gni")
import("//build/test.gni")

if (!defined(ohos_lite)) {
  ohos_unittest("AppSpawn_Sandbox_Debug_Mode_Test") {
    module_out_path = "appspawn/appspawn"
    cflags = [ "-Dprivate=public" ]

    if (appspawn_unittest_coverage) {
      cflags += [ "--coverage" ]
      ldflags = [ "--coverage" ]
      cflags_cc = [ "--coverage" ]
    }

    deps = []
    defines = [
      "APPSPAWN_TEST",
      "APPSPAWN_CLIENT",
      "APPSPAWN_DEBUG",
    ]

    # Target code include dir
    include_dirs = [
      "${appspawn_path}/common",
      "${appspawn_path}/standard",
      "${appspawn_innerkits_path}/client",
      "${appspawn_innerkits_path}/permission",
      "${appspawn_path}/test/mock/lib_func_mock",
      "${appspawn_path}/modules/sandbox",
      "${appspawn_path}/modules/sandbox/normal"
    ]

    # Target code sources
    sources = [
      "${appspawn_path}/modules/sandbox/appspawn_permission.c",
      "${appspawn_path}/modules/sandbox/normal/sandbox_common.cpp",
    ]

    # Test specific sources
    sources += [
      "${appspawn_path}/test/unittest/app_spawn_standard_test/app_spawn_sandbox_debug_mode/app_spawn_sandbox_debug_mode.cpp",
      "${appspawn_path}/test/mock/lib_func_mock/lib_func_mock.cpp",
    ]

    configs = [ "${appspawn_path}:appspawn_config" ]
    external_deps = [
      "cJSON:cjson",
      "c_utils:utils",
      "config_policy:configpolicy_util",
      "hilog:libhilog",
      "hitrace:hitrace_meter",
      "init:libbegetutil",
      "googletest:gmock_main",
    ]

    if (build_selinux) {
      defines += [ "WITH_SELINUX" ]
      external_deps += [
        "selinux:libselinux",
        "selinux_adapter:libhap_restorecon",
      ]
    }
  }
}

